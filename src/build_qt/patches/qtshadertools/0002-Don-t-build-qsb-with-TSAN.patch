Subject: [PATCH] Don't build qsb with TSAN

It hangs or is just very slow to build anything with
---
 tools/qsb/CMakeLists.txt | 9 +++++++++
 1 file changed, 9 insertions(+)

diff --git a/tools/qsb/CMakeLists.txt b/tools/qsb/CMakeLists.txt
index 334fb0a..aaa0cc6 100644
--- a/tools/qsb/CMakeLists.txt
+++ b/tools/qsb/CMakeLists.txt
@@ -7,6 +7,10 @@
 ## qsb Tool:
 #####################################################################
 
+if (QT_FEATURE_sanitize_thread)
+    qt_internal_skip_sanitizer()
+endif()
+
 qt_get_tool_target_name(target_name qsb)
 qt_internal_add_tool(${target_name}
     TOOLS_TARGET # special case
@@ -22,6 +26,11 @@ qt_internal_add_tool(${target_name}
     EXTRA_CMAKE_INCLUDES
         "${QT_CMAKE_EXPORT_NAMESPACE}ShaderToolsMacros.cmake"
 )
+
+if (QT_FEATURE_sanitize_thread)
+    qt_internal_skip_linking_sanitizer()
+endif()
+
 qt_internal_return_unless_building_tools()
 
